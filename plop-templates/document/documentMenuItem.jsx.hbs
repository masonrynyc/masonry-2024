import { Iframe } from 'sanity-plugin-iframe-pane'
import getPreviewUrl from '@studio/src/getPreviewUrl'
import { MdInsertDriveFile } from 'react-icons/md'

const Icon = () => <MdInsertDriveFile size={24} />

export const {{camelCase documentName}}MenuItem = (S) => S.listItem()
  .title('{{titleCase documentName}}')
  .icon(Icon)
  .child(
    S.documentTypeList('{{camelCase documentName}}')
      .title('{{titleCase documentName}}')
      .menuItems(S.documentTypeList('{{camelCase documentName}}').getMenuItems())
      .filter('_type == $type')
      .params({ type: '{{camelCase documentName}}' })
      .child(documentId =>
        S.document()
          .schemaType('{{camelCase documentName}}')
          .documentId(documentId)
          .views([
            S.view.form(),
            S.view
              .component(Iframe)
              .options({
                url: doc => getPreviewUrl(doc)
              })
              .title('Preview')
          ])
        )
  )

export default {{camelCase documentName}}MenuItem